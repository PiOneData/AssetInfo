# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/assetinfo

# Authentication
JWT_SECRET=your-jwt-secret-key-here

# SaaS Governance - Identity Provider Encryption
# REQUIRED: 32-byte (256-bit) encryption key for securing IdP client secrets
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: File Storage (for contract PDFs in future phases)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET_NAME=your-bucket-name

# Optional: Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com
